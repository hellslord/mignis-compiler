{
    "Title"                 : "Mignis Intermediate Representation",
    "Version"               : "1.0",
    "Author"                : "Alessio Zennaro",
    "Supervisor"            : "Prof. Riccardo Focardi",
    "Academic_Year"         : "2015/16",
    "Grammar"               :
            {
                "Keyword_Separator"     : ":",
                "Operand_Separator"     : ";",
                
                "Language_Structure"    :
                        ["Option_List", 
                         "Binding_List", 
                         "Rule_List", 
                         "Policy_List", 
                         "Custom_List"
                        ],
    
                "Option"                :
                        {
                            "Keyword"           : "OPTN",
                            "Option_name"       : "String",
                            "Option_value"      : "String"
                        },
            
                "Binding"               :
                        {
                            "Keyword"           : "BIND",
                            "Interface_name"    : "String",
                            "Interface_value"   : "Net_Ip"
                        },
                        
                "Rule"                  :
                        {
                            "Keyword"           :
                                ["DROP", "RJCT", "ALLW", "TLLW"],
                            "Source"            : "Endpoint",
                            "SNat"              : "Endpoint",
                            "Destination"       : "Endpoint",
                            "DNat"              : "Endpoint",
                            "Protocol"          : "Prtcls",
                            "Custom"            : "String"
                        },
                       
                "Policy"                :
                        {
                            "Keyword"           :
                                ["PDRP", "PRJC", "PLLW", "PTLW"],
                            "Protocol"          : "Prtcls"
                        },
                        
                "Custom"                : 
                        {   "Keyword"           : "CSTM",
                            "Custom_Rule"       : "String"
                        },
            
                "Net_Ip"                : "Int.Int.Int.Int/Int",
                
                "Ip"                    : 
                        ["h:Int.Int.Int.Int", "n:Net_Ip"],
                
                "Endpoint"              :
                        {
                            "Host"              :
                                ["String", "Ip", "ANY", "MASQUERADE", ""],
                            "Interface"         : 
                                ["String", ""],
                            "Port"              : "Int"                                
                        },
                
                "Prtcls"                :
                        ["TCP", "UDP", "ICMP", "ANY"]
            }
}